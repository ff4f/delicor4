<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<template id="assets_common" name="l10n_bo_check_printing pdf assets" inherit_id="web.report_assets_common">
    <xpath expr="." position="inside">
        <link rel="stylesheet" type="text/scss" href="/l10n_bo_check_printing/static/src/scss/report_check_commons.scss"/>
        <link rel="stylesheet" type="text/scss" href="/l10n_bo_check_printing/static/src/scss/report_check_bottom.scss"/>
        <link rel="stylesheet" type="text/scss" href="/l10n_bo_check_printing/static/src/scss/report_check_middle.scss"/>
        <link rel="stylesheet" type="text/scss" href="/l10n_bo_check_printing/static/src/scss/report_check_top.scss"/>
    </xpath>
</template>

<template id="ckbo_check">
    <div class="container" style="font-size:8px; padding:5px; padding-right: 25px; padding-left: 25px">
        <t t-if="page['state'] == 'cancelled'">
            <div class="o-watermark">VOID</div>
        </t>
        <table width="100%">
            <tr>
                <td width="15%">
                </td>
                <td width="70%">
                </td>
                <td width="15%">
                </td>
            </tr>
        </table>
        <table width="100%" style="margin-top:50px">
            <tr>
                <td width="90%">
                </td>
                <td width="10%">
                </td>
            </tr>
        </table>
        <table width="100%" style="margin-top:10px">
            <tr>
                <td width="55%">
                </td>
                <td style="border-bottom: black 1px solid" width="10%"><div t-esc="page['partner_id']" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/></td>
                <td width="5%">
                </td>
                <td style="border-bottom: black 1px solid" width="10%"><div t-esc="page['payment_date'].split('/')[0]"/></td>
                <td width="5%">
                </td>
                <td style="border-bottom: black 1px solid" width="10%"><div t-esc="page['payment_date'].split('/')[1]"/></td>
                <td width="5%">
                </td>
                <td style="border-bottom: black 1px solid" width="10%"><div t-esc="page['payment_date'].split('/')[2]"/></td>               
            </tr>
        </table>
        <table width="100%" style="margin-top:10px">
            <tr>
                <td width="10%">
                </td>
                <td style="border-bottom: black 1px solid" width="60%"><div t-esc="page['partner_name']"/></td>
                <td width="10%">
                </td>
                <td style="border-bottom: black 1px solid" width="20%"><t t-esc="page['amount'].replace(o.currency_id.symbol, '')"/></td>
            </tr>
        </table>
        <table width="100%" style="margin-top:10px">
            <tr>
                <td width="10%">
                </td>
                <td style="border-bottom: black 1px solid" width="80%"><div t-esc="page['amount_in_word']"/></td>
                <td width="10%">
                </td>
            </tr>
        </table>
        <table width="100%" style="margin-top:2px">
            <tr>
                <td width="20%">
                </td>
                <td width="80%"></td>
            </tr>
        </table>
        <table width="100%" style="margin-top:2px">
            <tr>
                <td width="20%">
                </td>
                <td width="80%"></td>
            </tr>
        </table>
        <table width="100%" style="margin-top:2px">
            <tr>
                <td width="20%">
                </td>
                <td width="80%"></td>
            </tr>
        </table>
        <table width="100%" style="margin-top:10px">
            <tr>
                <td width="5%">
                </td>
                <td style="border-bottom: black 1px solid" width="47%"><div t-esc="page['memo']"/></td>
                <td width="1%"></td>
                <td style="border-bottom: black 1px solid" width="47%"></td>
            </tr>
        </table>
        <table width="100%" style="margin-top:10px">
            <tr>
                <td width="40%">
                </td>
                <td width="60%">
                </td>
            </tr>
        </table>        
    </div>
</template>

<template id="ckbo_stub">
    <div t-attf-class="ckbo_stub ckbo_stub_{{ stub_num }}">
        
    </div>
</template>

</data>
</odoo>
