<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="pos_config_multi_currency">
        <field name="name">pos.config.multi.currency</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <notebook>
                    <page string="Multi currency">
                        <group>
                            <field name="multi_currency"/>
                            <field name="multi_currency_update_rate" attrs="{'invisible' : [('multi_currency', '=', False)]}"/>
                        </group>
                    </page>
                </notebook>
            </xpath>

        </field>
    </record>

</odoo>
