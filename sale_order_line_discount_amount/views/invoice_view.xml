    <record id="view_invoice_discount_amt_tree" model="ir.ui.view">
        <field name="name">account.invoice.line.tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount']" position="after">
                <field name="discount_amt"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_discount_amt_form" model="ir.ui.view">
        <field name="name">account.invoice.line.form</field>
        <field name="model">account.invoice.line</field>
        <field name="inherit_id" ref="account.view_invoice_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='discount']" position="after">
                <field name="discount_amt"/>
            </xpath>
            <xpath expr="//field[@name='discount']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="invoice_form_supplier_disc">
        <field name="name">invoice.form.supplier.disc</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount']" position="after">
                <field name="discount_amt"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='discount']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
